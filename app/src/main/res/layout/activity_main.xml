<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ibr12.ncis.Main2Activity"
    android:background="#313131">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" You Are : Steve Jobs"
        android:id="@+id/button2"
        android:background="@drawable/roundeed"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:textSize="25dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE A CHARACTER"
        android:id="@+id/button"
        android:background="@drawable/roundeed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:layout_margin="3dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Welcome To NCIS"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="#69686a" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button2"></RelativeLayout>
</RelativeLayout>